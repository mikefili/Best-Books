<!DOCTYPE html>
<html>
    <%- include('../.././layout/head') %>
<body>
  <%- include('../.././layout/header') %>
    <ul>
      <% data.forEach(book=>{ %> 
        <li>
          <div class="container-xl">
            <img src="<%=book.image_url%>" alt="" class="logo">
            <p class="title">Title: <%=book.title %></p> 
            <p class="author">Author: <%=book.author %></p>
            <p>Isbn: <%=book.isbn %></p>
            <p class="description">Description: <%=book.description %></p>  
            <button type="button" class="formbutton " data-id="<%=book.isbn%>">ADD</button> 
          <div class="container-l">
            <form class="form1" id="replycomment-<%=book.isbn %>" action="/books" method="POST">
              <div class="center title">Edit book information:</div>
              <input class="edit-field" type='text' name='title' value="" placeholder="Title">
              <input class="edit-field" type='text' name='author' value="" placeholder="Author">
              <input class="edit-field" type='text' name='isbn' value="" placeholder="ISBN">
              <input class="edit-field" type='text' name='image_url' value="" placeholder="URL">
              <input class="edit-field" type='text' name='description' value="" placeholder="Description">
              <button class="addbutton" type="submit">SAVE</button>
            </form>
          </div>
        </li>
      <%  }) %>
    </ul>
    <%- include('.././layout/footer') %>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <script type="text/javascript" src="/app.js"></script>
</body>
</html>