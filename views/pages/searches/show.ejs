<!DOCTYPE html>
<html>
    <%- include('../.././layout/head') %>
<body>
  <%- include('../.././layout/header') %>
    <ul>
      <% data.forEach((book,uid)=>{ %> 
        <li>
          <div class="container-xl">
            <img src="<%=book.image_url%>" alt="" class="logo">
            <p class="title">Title: <%=book.title %></p> 
            <p class="author">Author: <%=book.author %></p>
            <p>Isbn: <%=book.isbn %></p>
            <p class="description">Description: <%=book.description %></p>  
            <button type="button" class="formbutton " data-id="<%=uid%>">ADD</button> 
            <div class="container-l">
              <form class="form1" id="replycomment-<%=uid %>" action="/books" method="POST">
                <div class="center title">Edit book information:</div>
                <input class="edit-field change" type='text' name='title' value="<%=book.title %>" placeholder="Title">
                <input class="edit-field change" type='text' name='author' value=" <%=book.author %>" placeholder="Author">
                <input class="edit-field change" type='text' name='isbn' value="<%=book.isbn %>" placeholder="ISBN">
                <input class="edit-field change" type='text' name='image_url' value="<%=book.image_url %>" placeholder="URL">
                <input class="change" type='text' name='description' value="<%=book.description %>" placeholder="Description">
                <button class="addbutton" type="submit">SAVE</button>
              </form>
            </div>
          </div>
        </li>
      <%  }) %>
    </ul>

    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
  <script type="text/javascript" src="/app.js"></script>
  <%- include('../.././layout/footer') %>
</body>
</html>