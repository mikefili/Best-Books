

<!DOCTYPE html>
<html lang="en">
    <%- include('.././layout/head') %>
<body>
 
  <h1>Edit Book Information</h1>
  <form method="POST" action="/update/<%= data.id %>">
   
        <label>Title
        <input type='text' name='title' value="<%=data.title %>">
       </label>
   
       <label>Author
        <input type='text' name='author' value="<%=data.author %>">
       </label>

       <label>Isbn
        <input type='number' name='isbn' value="<%=data.isbn %>">
       </label>
       <label>URL
        <input type='text' name='image_url' value="<%=data.image_url %>">
       </label>
       
    <div class="form-group">
      <label for="description">description:</label>
      <textarea type="text" id="description" name="description"><%= data.description %></textarea>
    </div>
    <div class="form-group">
      <input type="submit" value="Update Book" />
    </div>
  </form>
</body>
</html>